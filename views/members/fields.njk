<div class="item">
    <div>Imagem de perfil</div>
    <div>
        <input type="url" name="avatar_url" placeholder="Insira a URL de uma imagem..." value="{{member.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" placeholder="Insira seu nome..." value="{{member.name}}">
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input type="email" name="email" placeholder="Insira seu email..." value="{{member.email}}">
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input type="date" name="birth" value="{{member.birth}}" required="required">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span><input type="radio" name="gender" value="M" checked {% if member.gender == "M" %} checked="checked" {% endif %}>Masculino</span>
        <span><input type="radio" name="gender" value="F" {% if member.gender == "F" %} checked="checked" {% endif %}>Feminino</span>
    </div>
</div>

<div class="item">
    <div>Tipo Sangu√≠neo</div>
    <div>
        <select name="blood">
            <option value="A+" {% if member.blood == "A1" %} select="select" {% endif %}>A+</option>
            <option value="A-" {% if member.blood == "A0" %} select="select" {% endif %}>A-</option>
            <option value="B+" {% if member.blood == "B1" %} select="select" {% endif %}>B+</option>
            <option value="B-" {% if member.blood == "B0" %} select="select" {% endif %}>B-</option>
            <option value="AB+" {% if member.blood == "AB1" %} select="select" {% endif %}>AB+</option>
            <option value="AB-" {% if member.blood == "AB0" %} select="select" {% endif %}>AB-</option>
            <option value="O+" {% if member.blood == "O1" %} select="select" {% endif %}>O+</option>
            <option value="O-" {% if member.blood == "A0" %} select="select" {% endif %}>O-</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Peso (kg)</div>
    <div>
        <input type="number" name="weigth" placeholder="Insira o seu peso..." value="{{member.weigth}}">
    </div>
</div>

<div class="item">
    <div>Altura (cm)</div>
    <div>
        <input type="number" name="heigth" placeholder="Insira a sua altura..." value="{{member.heigth}}">
    </div>
</div>

<button type="submit">Salvar</button>