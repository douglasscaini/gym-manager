{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">
        <a href="/instructors/create">Novo</a>
        <table>
            <thead>
                <tr>
                    <th>Instrutor</th>
                    <th>Áreas de atuação</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>

                {% for instructor in instructors %}
                    <tr>
                        <td>
                            <span style="background-image: url({{instructor.avatar_url}})"></span>{{instructor.name}}</td>
                        <td>{{instructor.services}}</td>
                        <td>
                            <a href="/instructors/{{instructor.id}}">Exibir</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}